{% extends "layout.html" %}

{% block content %}
<link rel="stylesheet" href="/stylesheets/sidebar.css">
<link rel="stylesheet" href="/stylesheets/dialogbox.css">
<div id="dialogbox">
	<div id="dialogboxhead">Song Options</div>
	<div id="dialogboxbody">
		<input id="bpm" name="weight" type="range" min="10" max="150" step="1" />
		<label id="bpm_label"></label>

		<select id="step_offset">
			<option value="9">Alto Saxophone</option>
			<option value="12">Guitar</option>
		</select>
	</div>
	<div id="dialogboxfoot">
		<button onclick="prompt.ok()">Start!</button> <button onclick="prompt.cancel()">Cancel</button>
	</div>
</div>
<div class="sidenav">
	<h1> Options </h1>
	<label><input id="metronome-enabled" type="checkbox"/ checked> Metronome</label>
	<label><input id="autoscroll-enabled" type="checkbox"/ checked> Autoscroll</label>
	<label><input id="playalong-enabled" type="checkbox"/> Play Along</label>
</div>
<div id="header"></div>
<div id="boo"></div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://unpkg.com/vexflow/releases/vexflow-debug.js"></script>
<script src="https://unpkg.com/vexflow/releases/vexflow-min.js"></script>
<script type="text/javascript" src="/js/note_player.js"></script>
<script type="text/javascript" src="/js/metronome.js"></script>
<script type="text/javascript" src="/js/bar_computer.js"></script>
<script type="text/javascript" src="/js/key_comparison.js"></script>
<script type="text/javascript" src="/js/key_signatures.js"></script>
<script type="text/javascript" src="/js/note_detection.js"></script>
<script type="text/javascript" src="/js/staff_rendering.js"></script>
<script type="text/javascript">
		var name = '{{s.name}}';
		var beatValue = {{s.beat_value}};
		var beatsPerMeasure = {{ s.beats_per_measure }};
		var keySignature = '{{s.key_signature}}';
		var notes = {{s.notes|raw}};
		var bars = {{bars|raw}};
</script>
<script type="text/javascript" src="/js/test.js"></script>
{% endblock %}
